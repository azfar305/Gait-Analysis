        <Button Margin="250,220,305,130" Click="Button_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Width="152">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Ellipse Fill="#FF37C1D0">
                        </Ellipse>
                        <Ellipse Margin="60" Fill="#FF37C1D0" StrokeThickness="30" Stroke ="Black" ></Ellipse>
