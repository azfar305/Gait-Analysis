      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="900"
      Title="Samples">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />

        </Grid.RowDefinitions>

        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="304,31,332,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="90" Text="TRACE" Foreground="#FF37C1D0" TextAlignment="Center" Width="264" Height="110"/>
